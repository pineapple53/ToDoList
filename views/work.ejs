<%- include("partials/header.ejs") %>
<h1 class="text-center">Arbeits-To-Do-Liste</h1>
<h2 class="text-center lh-lg"><%= currentDate %></h2>


<form action="/work/submit" method="POST" class="text-center">
    <label for="todo">Aufgabe:</label>
    <input type="text" id="todo" name="todo">
    <input type="submit" value="hinzufügen">
</form>

<ul> 
    <% todos.forEach(function(todo, index) { %>
        <li>
            <input type="checkbox" data-index="<%= index %>">
            <span><%= todo %></span>
        </li>
    <% }); %>
</ul>
<button id="removeSelected">Ausgewählte entfernen</button>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="main.js"></script>

 
